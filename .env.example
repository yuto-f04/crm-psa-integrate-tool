# Application
APP_BASE_URL=http://localhost:3000 # WebアプリURL
API_BASE_URL=http://localhost:4000 # APIベースURL
NODE_ENV=development
APP_ENV=local # local|staging|production

# Auth
AUTH_JWT_SECRET=dev-secret-change-me

# Slack
SLACK_BOT_TOKEN=xoxb-your-token
SLACK_SIGNING_SECRET=slack-signing-secret
SLACK_INTERACTIONS_URL=http://localhost:4000/slack/interactions
ALERT_SLACK_CHANNEL=#alerts
ESCALATE_24H_HANDLE=@pm-lead
ESCALATE_48H_HANDLE=@exec

# Google / Drive
GOOGLE_PROJECT_ID=local-project
GOOGLE_SA_EMAIL=service-account@example.iam.gserviceaccount.com
GOOGLE_SA_KEY_JSON_BASE64= # base64エンコードしたSAキーJSON
GOOGLE_DRIVE_ROOT_ID=drive-folder-id

# tldv
TLDV_WEBHOOK_SECRET=replace-me
TLDV_WEBHOOK_URL=https://api.example.com/webhooks/tldv

# Email
EMAIL_PROVIDER=sendgrid
EMAIL_FROM=no-reply@example.com
SENDGRID_API_KEY=

# Money Forward (後段スケルトン)
MF_CLIENT_ID=
MF_CLIENT_SECRET=
MF_OAUTH_CALLBACK_URL=http://localhost:3000/settings/mf/callback

# GitHub (後段スケルトン)
GITHUB_APP_ID=
GITHUB_WEBHOOK_SECRET=
GITHUB_PRIVATE_KEY_BASE64=

# LLM thresholds
LLM_AUTO_APPROVE_THRESHOLD=0.8
LLM_REVIEW_MIN_THRESHOLD=0.6

# SLO / Alert thresholds
SLO_API_P95_MS=500
SLO_AVAILABILITY_PCT=99.0
ALERT_PENDING_DOCS_24H=3
ALERT_QUEUE_LAG_SEC=300
ALERT_WEBHOOK_FAIL_PCT=5

# Audit / Compliance
AUDIT_LOG_RETENTION_DAYS=90
DB_BACKUP_PITR_DAYS=7
PII_DELETE_SLA_DAYS=30
DATA_RESIDENCY_REGION=ap-northeast-1

# HTTP client
HTTP_CLIENT_TIMEOUT_MS=10000
RETRY_BACKOFF_BASE_MS=500
RETRY_BACKOFF_MAX_MS=10000
RETRY_MAX_ATTEMPTS=5

# Rate limits
RATE_LIMIT_RPS_SLACK=10
RATE_LIMIT_RPS_DRIVE=5
RATE_LIMIT_RPS_MF=3
RATE_LIMIT_RPS_GITHUB=5

# Observability
APM_TRACE_RETENTION_DAYS=3
LOG_SAMPLING_RATIO=1
LLM_MONTHLY_COST_LIMIT_USD=200
EXTERNAL_API_COST_LIMIT_USD=500

# Security / Web
CORS_ALLOWED_ORIGINS=http://localhost:3000
CSP_DEFAULT_SRC='self'
CSP_IMG_SRC='self' data:
CSP_SCRIPT_SRC='self'
CSRF_MODE=double-submit # double-submit|header|none

# Upload / ClamAV
UPLOAD_MAX_MB=25
UPLOAD_ALLOWED_MIME=application/pdf,image/png,image/jpeg
VIRUS_SCAN_ENABLED=true

# DR / Incident
DR_RTO_HOURS=4
DR_RPO_MINUTES=15
INCIDENT_STOP_ENABLED=false

# Data stores
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/crm_psa?schema=public
REDIS_URL=redis://localhost:6379
DB_POOL_MAX=20

# OpenTelemetry
OTLP_ENDPOINT=http://localhost:4318

# Playwright staging credentials
E2E_PM_EMAIL=pm@example.com
E2E_PM_PASSWORD=pm-password

